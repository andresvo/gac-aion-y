<!-- Swiper JS -->
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script is:inline>
  var swiper = new Swiper(".mySwiper", {
    effect: "fade",
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    pagination: {
      el: ".swiper-pagination",
    },
  });

  // Color exterior
  const extSwiper = new Swiper(".extSwiper", {
    effect: "fade",
  });

  function changeColor(index) {
    extSwiper.slideTo(index);
  }

  // Color interior
  const intSwiper = new Swiper(".intSwiper", {
    effect: "fade",
  });

  function changeColorInt(index) {
    intSwiper.slideTo(index);
  }
</script>

